{
    "tasks": [
      {
        "type": "shell",
        "label": "g++ build & run active file",
        "command": "g++",
        "args": [
            "-fdiagnostics-color=always",
            "-g",
            // ".\\*.cpp",
            ".\\src\\main.cpp",
            ".\\src\\EventSink\\EventSink.cpp",
            ".\\src\\Mapper\\Mapper.cpp",
            ".\\src\\Reader\\ReadCSV.cpp",
            ".\\src\\Writer\\WriteCSV.cpp",
            "-o",
            "bin\\main.exe",
            "-lole32",
            "-loleaut32",
            "-lws2_32",
            "-lwbemuuid",
            "-ljsoncpp",
            "-std=c++20"
        ],
        "options": {
            "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": "build"
      }
    ],
    "version":"2.0.0"
  }