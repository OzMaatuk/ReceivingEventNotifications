{
    "tasks": [
      {
        "type": "shell",
        "label": "g++ build & run project",
        "command": "g++",
        "args": [
            "-fdiagnostics-color=always",
            "-g",
            "-Iinclude",
            // ".\\*.cpp",
            ".\\src\\main.cpp",
            ".\\src\\EventSink.cpp",
            ".\\src\\Mapper.cpp",
            ".\\src\\ReadCSV.cpp",
            ".\\src\\WriteCSV.cpp",
            "-o",
            "bin\\main.exe",
            "config\\main.json",
            "-lole32",
            "-loleaut32",
            "-lws2_32",
            "-lwbemuuid",
            "-ljsoncpp",
            "-std=c++20"
        ],
        "options": {
            "cwd": "${fileDirname}\\..\\"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": "build"
      },
      {
        "type": "shell",
        "label": "g++ build & run tests",
        "command": "g++",
        "args": [
            "-fdiagnostics-color=always",
            "-g",
            "-Iinclude",
            ".\\src\\Mapper.cpp",
            ".\\src\\ReaderCSV.cpp",
            ".\\test\\TestMapper.cpp",
            ".\\test\\TestReaderCSV.cpp",
            ".\\test\\test.cpp",
            "-o",
            "bin\\test.exe",
            "-lole32",
            "-loleaut32",
            "-lws2_32",
            "-lwbemuuid",
            "-ljsoncpp",
            "-lglog",
            "-lgtest",
            "-std=c++20"
        ],
        "options": {
            "cwd": "${workspaceFolder}\\..\\"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": "test"
      }
    ],
    "version":"2.0.0"
  }